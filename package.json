{
  "name": "runtypes",
  "version": "0.0.2",
  "description": "Runtime types and validation for JavaScript",
  "main": "runtypes.js",
  "scripts": {
    "test": "mocha testSetup.js src/**/*.spec.js --reporter progress",
    "test:watch": "npm run test -- --watch",
    "start": "npm run test:watch",
    "build": "browserify -s runtypes src -o runtypes.js -t [ babelify ]",
    "release": "npm run release:patch",
    "release:patch": "npm run build && xyz --increment patch",
    "release:minor": "npm run build && xyz --increment minor",
    "release:major": "npm run build && xyz --increment major"
  },
  "author": "Thomas Crockett",
  "license": "MIT",
  "engines": {
    "node": "^6.2.0"
  },
  "dependencies": {
    "nth": "^0.1.3"
  },
  "devDependencies": {
    "babel-cli": "6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^2.10.2",
    "eslint-plugin-import": "^1.8.1",
    "eslint-watch": "^2.1.11",
    "mocha": "2.4.5",
    "xyz": "^0.5.0"
  },
  "keywords:": [
    "runtime",
    "algebraic",
    "data",
    "type",
    "validation",
    "functional"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pelotom/runtypes"
  }
}
